<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="single_dof" params="parent prefix *origin">
    <!-- Constants for robot dimensions -->
    <xacro:property name="axel_offset" value="0.00" />

    <!-- Base Joint -->
    <joint name="${prefix}base_joint" type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${prefix}base_link" />
    </joint>

    <!-- Base Link with NEMA 17 Stepper Motor -->
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://synapticon_ros2_control/meshes/flywheel.stl" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://synapticon_ros2_control/meshes/flywheel.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <!-- Rotational Joint -->
    <joint name="${prefix}joint1" type="continuous">
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0.7"/>
      <limit effort="100" velocity="1.0"/>
    </joint>

    <!-- Link1 with Flywheel -->
    <link name="${prefix}link1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://synapticon_ros2_control/meshes/motor.stl" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://synapticon_ros2_control/meshes/motor.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>
</robot>
